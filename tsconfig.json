{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["**/*.ts", "./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
